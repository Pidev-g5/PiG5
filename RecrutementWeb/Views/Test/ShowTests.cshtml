@model IEnumerable<RecrutementWeb.Models.TestModel>

@{
    ViewBag.Title = "ShowTests";
    Layout = "~/Views/Shared/_LayoutAcceuil.cshtml";
}

<h2>ShowTests</h2>
<br /><br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
<table>
    <tr>
        <td>
            <div>
                Search by the Test's name: @Html.TextBox("filtre")
            </div>
        </td>
        <td> <input type="submit" value="Search" id="submit" /> </td>
    </tr>
</table>
}
<main>
    <div class="container-fluid mb-5">

        <!--Section: Basic examples-->
        <section>

            <div class="row">

                <div class="col-md-12">

                    <div class="card">
                        <div class="card-body">

                            <table id="datatables" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TestName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TypeTest)
                                        </th>

                                        <th></th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TestName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TypeTest)
                                            </td>

                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.TestId }) |
                                                @Html.ActionLink("Details", "../Question/ShowQuestions", new { id = item.TestId }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.TestId })
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>

                </div>

            </div>

        </section>
        <!--Section: Basic examples-->

    </div>
</main>

