                    </ul>
                </div>
                <div class="skill_sidebar_widget">
                    <h4>Skills Percentage <span class="float-right font-weight-bold">85%</span></h4>
                    <p>Put value for "Cover Image" field to increase your skill up to "15%"</p>
                    <ul class="skills">
                        <li class="progressbar3" data-width="85" data-target="85"></li>
                    </ul>
                </div>
            </div>
            <br /><br /><br />
                        <p>
                            <button class="btn btn-lg btn-thm">@Html.ActionLink("Create New", "Create")</button>
                            <button class="btn btn-lg btn-thm"> @Html.ActionLink("Questions List", "../Question/ShowQuestions" )</button>
                        </p>
           
            <main>
                <div class="container-fluid mb-5">

                    <!--Section: Basic examples-->
                    <section>

                        <div class="row">

                            <div class="col-lg-12 ">

                                <div class="card">
                                    <div class="card-body col-lg-12">

                                        <table id="datatables" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.TestName)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.TypeTest)
                                                    </th>

                                                    <th></th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.TestName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.TypeTest)
                                                        </td>

                                                        <td>
                                                            <button class="btn btn-gray">@Html.ActionLink("Edit", "Edit", new { id = item.TestId })</button>  
                                                           
                                                            <button class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.TestId })</button>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>

                                        </table>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </section>
                    <!--Section: Basic examples-->

                </div>
            </main>

